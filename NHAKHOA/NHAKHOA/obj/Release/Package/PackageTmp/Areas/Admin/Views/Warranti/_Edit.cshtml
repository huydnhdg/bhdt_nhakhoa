@model NHAKHOA.Models.Warranti


@using (Html.BeginForm("Edit", "Warranti"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 class="text-center">NGÀY TRẢ MẪU</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.ID_Bill)
    <div class="form-group">
        @Html.LabelFor(model => model.Successdate, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.Successdate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.Successdate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group hidden">
        @Html.LabelFor(model => model.Senddate, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.Senddate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.Senddate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3"></div>
        <div class="text-center col-md-4">
            <button type="submit" class="btn btn-success" style="width:100%"><i class="glyphicon glyphicon-ok"></i> Lưu thông tin</button>
        </div>
    </div>
</div>
}

