@model NHAKHOA.Models.Warranti
@{
    List<NHAKHOA.Models.DentalClinic> ldental = (List<NHAKHOA.Models.DentalClinic>)TempData["dental"];
}

@using (Html.BeginForm("Create", "Warranti"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-center">THÊM MỚI BẢO HÀNH</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">

            @Html.LabelFor(model => model.Doctor, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Doctor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Doctor, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ID_Dental, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.ID_Dental, new SelectList(ldental, "ID", "Name"),
               new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Dental, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hidden">
            @Html.LabelFor(model => model.Createdate, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Createdate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Createdate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group hidden">
            @Html.LabelFor(model => model.ID_Bill, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.ID_Bill, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.idbill } })
                @Html.ValidationMessageFor(model => model.ID_Bill, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="text-center">
                <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i> Lưu thông tin</button>
            </div>
        </div>
    </div>
}
